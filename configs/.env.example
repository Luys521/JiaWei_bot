# 飞书AI机器人环境配置示例
# 复制此文件为 .env 并填写实际值

# ==================== 应用元信息 ====================
APP_NAME=feishu-ai-bot
APP_VERSION=1.1.0
APP_ENV=development

# ==================== 飞书应用配置 ====================
FEISHU_APP_ID=cli_xxxxxxxxxx
FEISHU_APP_SECRET=xxxxxxxxxx
FEISHU_ENCRYPT_KEY=
FEISHU_VERIFICATION_TOKEN=xxxxxxxxxx
FEISHU_BOT_OPEN_ID=ou_xxxxxxxxxx

# ==================== 机器人配置 ====================
TARGET_CHAT_ID=oc_xxxxxxxxxx

# ==================== 服务配置 ====================
SERVER_HOST=0.0.0.0
SERVER_PORT=8081
LOG_LEVEL=INFO
LOG_FILE=/var/log/feishu-ai-bot/bot.log

# ==================== AI配置 ====================
AI_PROVIDER=deepseek
AI_API_KEY=sk-xxxxxxxxxx
AI_API_BASE=
AI_MODEL_NAME=
AI_TIMEOUT=30
AI_MAX_RETRIES=3

# ==================== OpenClaw配置 ====================
OPENCLAW_ENABLED=true
OPENCLAW_GATEWAY_URL=http://localhost:18789
OPENCLAW_TOKEN=your-secret-token
OPENCLAW_AGENT_ID=main
OPENCLAW_TIMEOUT=90

# ==================== 安全配置 ====================
ENABLE_EVENT_VERIFICATION=true
RATE_LIMIT_PER_MINUTE=30
ENABLE_IP_WHITELIST=false
IP_WHITELIST=

# ==================== 监控配置 ====================
ENABLE_METRICS=true
METRICS_PORT=9090
